#!/bin/sh

set -e

if [ "$1" = "triggered" ]
then
	/usr/sbin/u-boot-update
fi

if [ "$1" = "configure" ]
then
	# if this is the first installation and if there is no old *.bak
	# file, create an initial extlinux.conf
	if [ -z "$2" ] && [ ! -e "/boot/extlinux" ]
	then
		/usr/sbin/u-boot-update
	fi
fi

